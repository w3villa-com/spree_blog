<% content_for :page_title do %>
  <%= link_to Spree.t(:blog_entry), spree.admin_blog_entries_url %>: <%= @blog_entry.title %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_blog_list), spree.admin_blog_entries_url, { class: "btn-success", icon: 'arrow-left'} %>
  <%= button_link_to 'Preview', (blog_entry_permalink(@blog_entry)), { target: '_blank' , class: "btn btn-light", icon: 'view.svg'} %>
<% end %>


<%= render "spree/shared/error_messages", :target => @blog_entry %>

<%= form_for [:admin, @blog_entry] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => f %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
